doctype html

html(lang="en")
    head
        title sarah
        meta(
            name="viewport"
            content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=0"
        )
    body
        main.content
            section.content__video
                video(
                    playsinline
                    autoplay
                    muted
                    loop
                    preload
                )
                    source(
                        src='videos/coffee.mp4'
                        type='video/mp4'
                    )
                    source(
                        src='videos/coffee.webm'
                        type='video/webm'
                    )
            section.content__video-controls
            section.content__slider
                article.slider__slide
